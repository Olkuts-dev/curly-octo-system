{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["./src/*"]
    },
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node"
    ]
  },
  "include": [
    "src",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "server.mjs"
  ]
}
